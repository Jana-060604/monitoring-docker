{
  "id": null,
  "uid": null,
  "title": "Docker Monitoring Dashboard",
  "tags": [],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "graph",
      "title": "CPU Usage",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(node_cpu_seconds_total{mode!='idle'}[1m])",
          "interval": "",
          "legendFormat": "{{cpu}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "CPU Usage",
          "logBase": 1,
          "max": 1,
          "min": 0,
          "show": true
        },
        {
          "format": "short",
          "show": true
        }
      ]
    },
    {
      "type": "graph",
      "title": "Memory Usage",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes",
          "interval": "",
          "legendFormat": "Used",
          "refId": "A"
        },
        {
          "expr": "node_memory_MemAvailable_bytes",
          "interval": "",
          "legendFormat": "Available",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "bytes",
          "label": "Memory Usage",
          "logBase": 1,
          "max": null,
          "min": 0,
          "show": true
        },
        {
          "format": "short",
          "show": true
        }
      ]
    },
    {
      "type": "graph",
      "title": "Network Traffic",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 24,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total[1m])",
          "interval": "",
          "legendFormat": "Received",
          "refId": "A"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total[1m])",
          "interval": "",
          "legendFormat": "Transmitted",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "bytes",
          "label": "Network Traffic",
          "logBase": 1,
          "max": null,
          "min": 0,
          "show": true
        },
        {
          "format": "short",
          "show": true
        }
      ]
    },
    {
      "type": "graph",
      "title": "Disk I/O",
      "gridPos": {
        "x": 0,
        "y": 16,
        "w": 24,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(node_disk_read_bytes_total[1m])",
          "interval": "",
          "legendFormat": "Read",
          "refId": "A"
        },
        {
          "expr": "rate(node_disk_written_bytes_total[1m])",
          "interval": "",
          "legendFormat": "Written",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "bytes",
          "label": "Disk I/O",
          "logBase": 1,
          "max": null,
          "min": 0,
          "show": true
        },
        {
          "format": "short",
          "show": true
        }
      ]
    }
  ]
}
